{
    "name": "php-sentinel/sentinel",
    "description": "Passive API contract monitor: detects when third-party APIs silently change.",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "psr/http-client": "^1.0",
        "psr/event-dispatcher": "^1.0",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.0",
        "guzzlehttp/guzzle": "^7.0",
        "mockery/mockery": "^1.6",
        "illuminate/support": "^12.52",
        "symfony/http-kernel": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Sentinel\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sentinel\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/sentinel"
    ],
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
